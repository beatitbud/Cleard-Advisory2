# Rename this file to .env.local and add your API keys

# OpenAI API Key - Get yours at https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Database
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_key

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# OAuth Providers (Optional)
GITHUB_ID=
GITHUB_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=cleared-advisory-prod

# Redis (for rate limiting)
REDIS_URL=redis://localhost:6379

# Security
ENCRYPTION_KEY=generate_with_openssl_rand_base64_32
JWT_SECRET=generate_with_openssl_rand_base64_32
MFA_ISSUER=ClearedAdvisoryGroup

# Monitoring
SENTRY_DSN=
LOGFLARE_API_KEY=

# API Keys
API_RATE_LIMIT=100
API_RATE_WINDOW_MS=60000

# Compliance
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=1095
GDPR_MODE=false

# Email Service (for contact form and notifications)
EMAIL_SERVICE_KEY=your-email-service-key-here
EMAIL_FROM=noreply@clearedadvisorygroup.com