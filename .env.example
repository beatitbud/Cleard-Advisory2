# App Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Authentication (NextAuth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# Socket.io
NEXT_PUBLIC_SOCKET_URL=http://localhost:3000
SOCKET_PORT=3001

# Security
ENCRYPTION_KEY=generate_with_openssl_rand_base64_32
JWT_SECRET=generate_with_openssl_rand_base64_32

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=cleared-advisory-prod

# Redis Configuration
ENABLE_REDIS=true
REDIS_URL=redis://localhost:6379

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_SITE_ID=XXXXXXX

# Error Monitoring (Sentry)
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxx@xxx.ingest.sentry.io/xxxxx
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# GitHub Integration (Bug Reports)
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repo_name

# Email Configuration
EMAIL_PROVIDER=smtp
FROM_EMAIL=noreply@clearedadvisorygroup.com

# SMTP Configuration (if using EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SendGrid Configuration (if using EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your_sendgrid_api_key

# AWS SES Configuration (if using EMAIL_PROVIDER=ses)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Internal API Security
INTERNAL_API_SECRET=generate_random_secret_for_internal_calls

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# Feature Flags
ENABLE_CHAT=true
ENABLE_MOCK_INTERVIEW=true
ENABLE_AI_FEATURES=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Google reCAPTCHA v3 Configuration
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product Price IDs
STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_premium_monthly
STRIPE_PREMIUM_YEARLY_PRICE_ID=price_premium_yearly
STRIPE_FEATURED_JOB_PRICE_ID=price_featured_job
STRIPE_FEATURED_JOB_BUNDLE_5_PRICE_ID=price_featured_job_bundle_5
STRIPE_RESUME_BASIC_PRICE_ID=price_resume_basic
STRIPE_RESUME_PREMIUM_PRICE_ID=price_resume_premium
STRIPE_COACHING_SESSION_PRICE_ID=price_coaching_session
STRIPE_COACHING_PACKAGE_3_PRICE_ID=price_coaching_package_3