# Security Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
FRONTEND_URL=https://caglive2.vercel.app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/cag_secure_db"
DATABASE_ENCRYPTION_KEY=your-32-char-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# CSRF Protection
CSRF_SECRET=your-csrf-secret-key-32-chars

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password

# AWS Configuration (for backups)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=cag-secure-backups

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security Headers
TRUST_PROXY=true
SECURE_COOKIES=true

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-32
BACKUP_SCHEDULE=0 2 * * *

# PII Detection Sensitivity
PII_DETECTION_LEVEL=strict

# Session Configuration
SESSION_SECRET=your-session-secret-key-32-chars
SESSION_MAX_AGE=86400000

# Two-Factor Authentication
MFA_ISSUER=Cleared Advisory Group
MFA_WINDOW=2